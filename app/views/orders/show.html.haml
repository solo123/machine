%p#notice= notice

%p
  %b Order date:
  = @object.order_date
%p
  %b Order number:
  = @object.order_number
%p
  %b Provider:
  = @object.provider_id
%p
= form_tag stock_in_order_path(@object) do
  %table.table.table-bordered.table-striped.table-hover
    %tr
      %th 全选
      %th 终端编号
      %th 型号
      %th 主机SN
      %th 单价
      %th 手机号
      %th 状态
      %th 操作

    - @object.order_items.each do |item|
      %tr
        %td= check_box_tag "item_ids[]", item.id if item.status == 0
        %td= item.t_code
        %td= item.model
        %td= item.sn_code
        %td= item.price
        %td= item.mobile_number
        %td= item.status
        %td
          = link_to 'Show', item
          |
          = link_to 'Edit', edit_order_item_path(item)
          |
          = link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }


  %p
    %b Total items:
    = @object.total_items
  %p
    %b Total amount:
    = @object.total_amount
  %p
    %b Status:
    = @object.status


  = submit_tag '入库'

%p

= link_to 'Back', orders_path
\|
= link_to 'Edit', edit_order_path(@object)
\|
= link_to 'Destroy', @object, :method => :delete, :data => { :confirm => 'Are you sure?' }
